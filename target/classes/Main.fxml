<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="520.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jss.Controller">
   <children>
      <HBox prefHeight="150.0" prefWidth="351.0">
         <children>
            <VBox prefHeight="150.0" prefWidth="150.0">
               <children>
                  <Button fx:id="btnAdd" layoutX="30.0" layoutY="20.0" mnemonicParsing="false" onAction="#btnAdd" prefHeight="50.0" prefWidth="150.0" text="Lägg till tävlare">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <TextField fx:id="txtName" prefWidth="0.0" promptText="Tävlar Namn">
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="150.0" prefWidth="140.0">
                     <children>
                        <RadioButton fx:id="radioMass" mnemonicParsing="false" prefHeight="17.0" text="Mass Start">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="raceType" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioHunting" mnemonicParsing="false" prefHeight="17.0" text="Hunting Start" toggleGroup="$raceType">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </RadioButton>
                        <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="140.0">
                           <children>
                              <RadioButton fx:id="radio15" mnemonicParsing="false" selected="true" text="15s">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="huntingStartDelay" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="radio30" mnemonicParsing="false" text="30s" toggleGroup="$huntingStartDelay">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </RadioButton>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets left="15.0" />
                           </padding>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <RadioButton fx:id="radioIndividual" mnemonicParsing="false" prefHeight="17.0" text="Individuell Start" toggleGroup="$raceType">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </RadioButton>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="350.0">
         <children>
            <Button fx:id="btnStart" mnemonicParsing="false" onAction="#btnStart" prefHeight="50.0" prefWidth="150.0" text="Start">
               <HBox.margin>
                  <Insets left="15.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnStop" mnemonicParsing="false" onAction="#btnStop" prefHeight="50.0" prefWidth="150.0" text="Stop">
               <HBox.margin>
                  <Insets left="20.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tblTable" prefHeight="346.0" prefWidth="350.0">
        <columns>
          <TableColumn fx:id="clmName" editable="false" prefWidth="171.0" resizable="false" sortable="false" text="Namn" />
          <TableColumn fx:id="clmStartTime" editable="false" prefWidth="90.0" resizable="false" sortable="false" text="Start Tid" />
            <TableColumn fx:id="clmEndTime" editable="false" prefWidth="88.0" resizable="false" sortable="false" text="Slut Tid" />
        </columns>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
